<div id="page-movie-info">
    <div id="movie-image">
        <img src="{{movie.image}}" alt="movie-image">
    </div>
    <div id="movie-info">
        <a href="/movies">Go back</a>
        <h2>{{movie.title}}</h1>
        <h3>Director: {{movie.director}}</h3>
        <h4>Stars</h4>
        <ul id="list-stars">
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <ul id="list-showtimes">
            {{#each movie.showtimes}}
            <li>{{this}} |</li>
            {{/each}}
        </ul>
    </div>
</div>